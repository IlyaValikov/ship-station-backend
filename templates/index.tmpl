<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShipStation</title>
    <!-- Подключение Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <!-- Навигационная панель (navbar) -->
    <nav class="navbar">
      <!-- Иконка слева -->
      <a class="navbar-brand" href="/">
        <div class="brand-container">
          <img
            src="/images/ShipStation.png"
            width="34"
            height="34"
            class="icon"
            alt="Icon"
          />
          <h1 class="brand-name">ShipStation</h1>
        </div>
      </a>
    </nav>
    <!-- Контейнер с текстом над списком багажа -->
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-9 d-flex align-items-center">
          <a class="btn btn-primary" type="button" href="/">Все судна</a>
          <form action="/" method="GET">
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                name="shipName"
                placeholder="Введите имя судна"
                value="{{.shipName}}"
                aria-label="Введите имя судна"
                aria-describedby="search-button"
              />
              <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Поиск</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Список багажей в виде карточек -->
    <div class="container">
      <!-- Обертка для строк с карточками -->
      <div class="row">
        {{ range.ships }}
        <div class="col-md-4">
          <div class="cards mb-4">
            <div class="card-about">
              <a href="/ship/{{.ShipID}}" class="card-link">
                <!-- Добавляем класс card-link -->
                <img
                  src="{{.Photo}}"
                  class="cards-img-top"
                  alt="Изображение багажа"
                />
                <div class="cards-body">
                  <h5 class="cards-title">{{.ShipName}}</h5>
                </div>
              </a>
              <form
                class="delete-form"
                action="/ship/{{.ShipID}}"
                method="POST"
              >
                <button class="btn btn-primary mx-auto" type="submit">
                  Удалить судно
                </button>
              </form>
            </div>
          </div>
        </div>

        {{ end }}
      </div>
      <!-- Конец обертки для строк с карточками -->
    </div>
  </body>
</html>
